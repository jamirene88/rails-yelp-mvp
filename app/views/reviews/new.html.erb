<div class="container">
  <h1>Post a Review</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.select :rating, [0, 1, 2, 3, 4, 5] %>
  </div>

    <%= f.submit 'Post!', class: 'btn btn-primary' %>
  <% end %>
<%= link_to "return to restaurants", restaurants_path %>
</div>

