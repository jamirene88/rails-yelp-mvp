<h1>This is a new page</h1>
<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"]%>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

</div>
